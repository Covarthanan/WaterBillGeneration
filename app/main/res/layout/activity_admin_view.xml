<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aacreations.waterbillgeneration.AdminView"
    android:background="@mipmap/back">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:src="@mipmap/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Welcome Admin"
        android:id="@+id/admin_welcome_text"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bill_image"
            android:id="@+id/admin_list" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bill_mechine"
            android:id="@+id/admin_bill" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="W - Wash laundry and dishes with full loads\nA - Always turn off your running water\nT - Take shortere showers\nE - Eliminate any and all leaks\nR - Reduce the flow of toilets and showerheads"
        android:id="@+id/textView2"
        android:textSize="19dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/admin_welcome_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Admin_logout_btn"
        android:src="@mipmap/logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="60dp" />

</RelativeLayout>
