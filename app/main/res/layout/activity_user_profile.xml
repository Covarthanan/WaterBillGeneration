<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aacreations.waterbillgeneration.UserProfile"
    android:background="@mipmap/back">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:fillViewport="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:hint="Name"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_aadhar"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:hint="Aadhar number"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_address"
                android:layout_below="@+id/user_aadhar"
                android:layout_centerHorizontal="true"
                android:hint="Address"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_age"
                android:layout_below="@+id/user_address"
                android:layout_centerHorizontal="true"
                android:hint="Age"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_phone"
                android:layout_centerHorizontal="true"
                android:hint="Phone number"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/user_age"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/user_email"
                android:layout_below="@+id/user_phone"
                android:layout_centerHorizontal="true"
                android:hint="Email"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/user_password"
                android:layout_below="@+id/user_email"
                android:layout_centerHorizontal="true"
                android:hint="Password"
                android:paddingLeft="20dp"
                android:textColorHint="#ffffff"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/update"
                android:background="#f65757"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/user_password" />


        </RelativeLayout>



</ScrollView>
</RelativeLayout>
